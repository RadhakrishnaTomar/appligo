<div class="container">

  <!-- Outer Row -->
  <div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

      <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
          <!-- Nested Row within Card Body -->
          <div class="row">
            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
            <div class="col-lg-6">
              <div class="p-5">
                <div class="text-center">
                  <h1 class="h4 text-gray-900 mb-4">
                    <%= image_tag "logo.png", width: "100", style: "margin: 0 auto;" %>                    
                  </h1>
                </div>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "user", "data-turbo-frame": "registration-form" }) do |f| %>
              <%= turbo_frame_tag "registration-form" do %>
                  <div id="error_explanation">
                    <%#= render "devise/shared/error_messages", resource: resource %>
                  </div>

                  <div class="form-group">
                    <%= f.text_field :name, class: "form-control form-control-user", autofocus: true, placeholder: "Enter your full name" %>
                  </div>
                  <div class="form-group">
                    <%= f.text_field :contact_number, class: "form-control form-control-user", placeholder: "Enter your contact number" %>
                  </div>
                  <div class="form-group">
                    <%= f.text_field :employee_id, class: "form-control form-control-user", placeholder: "Enter your Employee Id" %>
                  </div>
                  <div class="form-group">
                    <%= f.email_field :email, class: "form-control form-control-user", placeholder: "Enter your Email" %>
                  </div>

                  <div class="form-group">
                    <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-user", placeholder: "Enter Your Password (#{@minimum_password_length} characters minimum)" %>
                  </div>

                  <div class="form-group">
                    <%= f.password_field :password_confirmation, class: "form-control form-control-user", placeholder: "Enter Password Confirmation" %>
                  </div>

                  <%= f.fields_for :company_attributes do |c_form| %>
                    <div class="form-group">
                      <%= c_form.text_field :name, class: "form-control form-control-user", placeholder: "Enter Company Name" %>
                    </div>

                    <div class="form-group">
                      <%= c_form.text_field :location, class: "form-control form-control-user", placeholder: "Enter Company Location" %>
                    </div>
                  <% end %>

                  <%= f.submit "Sign Up", class: "btn btn-primary btn-user btn-block" %>
                <% end %>
                <% end %>
                <hr>
                <div class="text-center small">
                  <%= render "devise/shared/links" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>

  </div>

</div>
