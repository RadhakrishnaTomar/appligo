<div class="container">
  <!-- Outer Row -->
  <div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

      <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
          <!-- Nested Row within Card Body -->
          <div class="row">
            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
            <div class="col-lg-6">
              <div class="p-5">
                <div class="text-center">
                  <h1 class="h4 text-gray-900 mb-4">
                    <%= image_tag "logo.png", width: "100", style: "margin: 0 auto;" %>                    
                  </h1>
                </div>
                <%= form_with( url: saml_init_path,data: { turbo: false }, method: :get) do |f| %>
                  <div class="form-group">
                    <%= f.email_field :email, class: "form-control form-control-user", autofocus: true, autocomplete: "email", placeholder: "your@email.com" %>          
                  </div>
                  <%= f.submit "Sign in", class: "btn btn-primary btn-user btn-block" %>
                <% end %>

                <hr>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>

  </div>

</div>

